{
  "version": 2,
  "builds": [
    { 
      "src": "lovetogether-frontend/package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "build",
        "buildCommand": "cd lovetogether-frontend && npm install && npm run build"
      }
    },
    { 
      "src": "lovetogether-backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)",
      "dest": "lovetogether-backend/index.js"
    },
    { 
      "src": "/(.*)",
      "dest": "lovetogether-frontend/build/$1"
    }
  ]
}