{
  "version": 2,
  "builds": [
    { 
      "src": "lovetogether-frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    { "src": "lovetogether-backend/api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "lovetogether-backend/api/$1" },
    { "src": "/(.*)", "dest": "lovetogether-frontend/$1" }
  ],
  "buildCommand": "cd lovetogether-frontend && npm run build",
  "installCommand": "cd lovetogether-frontend && npm install"
}